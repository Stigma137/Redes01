package server;

import java.io.IOException;
import java.net.ServerSocket;

public class Server {

	public static void main(String[] args) {
		try {
			ServerSocket server = new ServerSocket(5000);
			System.out.println("...Waiting...");
			server.accept();
			System.out.println("...Connection achieved...");
			
			while(true) {}
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

}
